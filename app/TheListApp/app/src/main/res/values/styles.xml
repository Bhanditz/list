<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--TODO: Why you no work?-->
        <item name="android:textViewStyle">@style/TextViewAppTheme</item>
        <item name="android:editTextStyle">@style/input_fields</item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>
    </style>

    <!--Theme Components-->
    <style name="CheckBoxAppTheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check</item>
    </style>

    <!--Line Spacing-->
    <style name="TextViewAppTheme" parent="android:Widget.TextView">
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <!--Text Multiplier-->
    <style name="text_spacing">
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!--Theme-->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textViewStyle">@style/TextViewAppTheme</item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>

    </style>

    <!--Element/Layout Styles-->
    <style name="cancel_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <!--<item name="android:layout_alignParentEnd">true</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="fragment_layout_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/fragment_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@color/translucent_background</item>
    </style>

    <style name="intro_layout_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_extra_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_extra_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/fragment_vertical_margin</item>
    </style>


    <style name="standard_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:background">@drawable/btn_custom</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="account_helper_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/text_medium_dark</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="input_fields" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textColorHint">@color/text_medium_light</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="fragment_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
    </style>

    <style name="fragment_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_below">@+id/confirm_title</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

</resources>
