<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/intro_layout_main"
        android:orientation="vertical"
        android:weightSum="5"
        android:background="@color/primary_ultralight"
        tools:context="org.creativecommons.thelist.StartActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:id="@+id/confirm_title"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="50sp"
                android:paddingBottom="15dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="15dp"
                android:id="@+id/intro"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_below="@id/confirm_title"/>

            <Button
                style="@style/standard_button"
                android:background="@color/text_medium_dark"
                android:textColor="@color/text_light"
                android:text="@string/start_button_label"
                android:id="@+id/startButton"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/intro"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/existing_account_text"
                android:textSize="12sp"
                android:textColor="@color/text_medium_dark"
                android:id="@+id/accountButton"
                android:layout_gravity="center"
                android:layout_below="@+id/startButton"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/cc_logo_layout">
            <!--TODO: make image link to creative commons website-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/cc_logo"
                android:src="@drawable/start_logo"
                android:paddingBottom="7dp"
                android:layout_above="@+id/cc_logo_label"
                android:layout_centerHorizontal="true" />
            <TextView
                style="@style/account_helper_style"
                android:text="@string/alpha_release_terms_label"
                android:id="@+id/cc_logo_label"
                android:layout_alignParentBottom="true" />
            <!--<TextView-->
                <!--style="@style/account_helper_style"-->
                <!--android:text="@string/cc_logo_label"-->
                <!--android:id="@+id/cc_logo_label"-->
                <!--android:layout_alignParentBottom="true" />-->
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"/>

</merge>