<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fragment_layout_main"
    tools:context="fragments.CancelFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_icon"
        android:src="@drawable/confirm_x"
        android:layout_above="@+id/section_text"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/section_text"
        android:paddingTop="50dp"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="137dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/upload_cancelled_title"
            android:id="@+id/cancel_title"
            android:layout_centerHorizontal="true"
            android:textColor="@color/abc_primary_text_material_dark" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/upload_cancelled_text"
            android:id="@+id/cancel_text"
            android:paddingLeft="10dp"
            android:layout_below="@+id/cancel_title"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/primary_light" />
    </RelativeLayout>

</RelativeLayout>