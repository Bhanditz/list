<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_main"
    android:weightSum="5"
    android:orientation="vertical"
    tools:context="org.creativecommons.thelist.AccountActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="@string/account_text_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:gravity="center"
        android:paddingTop="50dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:windowSoftInputMode="stateVisible|adjustPan"
        android:layout_weight="2"
        android:id="@+id/loginFields_section">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailLoginField"
            android:inputType="textEmailAddress"
            android:hint="@string/email_hint" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/passwordLoginField"
            android:inputType="textPassword"
            android:hint="@string/password_hint"
            android:layout_below="@+id/emailLoginField"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_button_label"
            android:textColor="@android:color/white"
            android:id="@+id/loginButton"
            android:layout_below="@+id/passwordLoginField"
            android:layout_marginTop="5dp" />

        <!--TODO: forgot password functionality-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="Forgot password?"
            android:paddingTop="15dp"
            android:id="@+id/forgotPassword"
            android:clickable="true"
            android:visibility="invisible"
            android:layout_below="@+id/loginButton"
            android:gravity="center" />
    </RelativeLayout>
</LinearLayout>






